// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id      String  @id
  title   String
  code    String
  address String?
  area    String?
  type    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  models Model[]

  @@map("Projects")
}

model Model {
  id         String  @id
  projectId  String
  numBeds    Int?
  numBaths   Int?
  sizeBottom Float?
  sizeTop    Float?
  picture    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id])
  units   Unit[]

  @@map("Models")
}

model Unit {
  id          String  @id
  modelId     String
  name        String?
  pictureId   String?
  numBeds     Int?
  numBaths    Int?
  totalSize   Float?
  usefulSize  Float?
  terraceSize Float?
  floor       Int?
  orientation String?
  priceUf     Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  model Model @relation(fields: [modelId], references: [id])

  @@map("Units")
}
